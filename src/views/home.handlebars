<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <title>Home</title>
    <link rel="stylesheet" href="/static/card.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body>
    <div class="container mt-4">
        <div class="filter-form-horizontal mt-5">
            <form class="d-flex justify-content-between align-items-center" id="filter-form">
                <div class="form-group me-3">
                    <label for="interest">Interés</label>
                    <select class="form-control" id="interest">
                        <option value="">Categoría</option>
                        <option value="turismo">Turismo</option>
                        <option value="infantil">Infantil</option>
                        <option value="cultural">Cultural</option>
                        <option value="fiestas">Fiestas</option>
                        <option value="gratuitos">Gratuitos</option>
                        <option value="gastronomicos">Gastronómicos</option>
                        <option value="adulto_mayor">Adulto Mayor</option>
                        <option value="aventura">Aventura</option>
                    </select>
                </div>
                <div class="form-group me-3">
                    <label for="price">Precio</label>
                    <select class="form-control" id="price">
                        <option value="">Precio</option>
                        <option value="ascendente">Menor a Mayor</option>
                        <option value="descendente">Mayor a Menor</option>
                    </select>
                </div>

                <button type="submit" class="btn btn-primary">Filtrar</button>
            </form>
        </div>

        <!-- Botón de crear evento -->
        <a id="create-event-btn" href="/realTimeProducts" class="btn btn-warning mt-3 btn-jump">Crear Evento</a>

        <div id="events-container" class="row mt-4">
            {{#each events}} 
            <div class="col-md-4">
                <div class="card mb-4">
                    <div class="card-body">
                        <h5 class="card-title">{{this.name}}</h5> 
                        <p class="card-text">{{this.description}}</p> 
                        <p class="card-text"><strong>Precio:</strong> {{this.price}} CLP</p>
                        <p class="card-text"><strong>Categoría:</strong> {{this.category}}</p>
                        <div class="input-group mb-3">
                            <input type="number" class="form-controls quantity" value="1" min="1" id="quantity-{{this._id}}" style="width: 120px;">

                            <button class="btn btn-success add-to-cart" data-id="{{this._id}}">Agregar al carrito</button>
                        </div>
                    </div>
                </div>
            </div>
            {{/each}}
        </div>
    </div>

    <script src="/socket.io/socket.io.js"></script>
    <script src="/static/script.js"></script>
</body>
</html>
