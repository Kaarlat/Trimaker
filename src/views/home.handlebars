<div class="container mt-4">
    <!-- Formulario de filtrado horizontal -->
    <div class="filter-form-horizontal mt-5">
        <form class="d-flex justify-content-between align-items-center">
            <div class="form-group me-3">
                <label for="age">Edad</label>
                <select class="form-control" id="age">
                    <option value="">Selecciona un rango de edad</option>
                    <option value="10-15">10 a 15</option>
                    <option value="15-18">15 a 18</option>
                    <option value="18-24">18 a 24</option>
                    <option value="24-30">24 a 30</option>
                    <option value="30-45">30 a 45</option>
                    <option value="45-55">45 a 55</option>
                    <option value="55-65">55 a 65</option>
                    <option value="65+">Más de 65</option>
                </select>
            </div>

            <div class="form-group me-3">
                <label for="gender">Sexo</label>
                <select class="form-control" id="gender">
                    <option value="">Sexo</option>
                    <option value="male">Masculino</option>
                    <option value="female">Femenino</option>
                    <option value="other">Otro</option>
                </select>
            </div>

            <div class="form-group me-3">
                <label for="interest">Interés</label>
                <select class="form-control" id="interest">
                    <option value="">Categoría</option>
                    <option value="turismo">Turismo</option>
                    <option value="infantil">Infantil</option>
                    <option value="cultural">Cultural</option>
                    <option value="fiestas">Fiestas</option>
                    <option value="gratuitos">Gratuitos</option>
                    <option value="gastronomicos">Gastronómicos</option>
                    <option value="adultoMayor">Adulto Mayor</option>
                    <option value="aventura">Aventura</option>
                </select>
            </div>

            <button type="submit" class="btn btn-primary">Filtrar</button>
        </form>
    </div>
    </div>

    <!-- Botón "Crea tu evento" -->
    <div class="text-center mt-4">
        <button id="create-event-btn" class="btn btn-success">Crea tu evento</button>
    </div>
</div>

<script src="/static/script.js"></script>
