<!DOCTYPE html>
<html>
<head>
    <title>{{title}}</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="/static/index.css">
    <link rel="stylesheet" href="/static/card.css">
</head>
<body>
    <header>
        <div class="logo-container">
            <h1>OMATSURI</h1>
            <p>Tu guía a los mejores panoramas.</p>
        </div>
        <nav class="navbar">
            <ul class="nav-left">
                <li class="dropdown">
                    <a href="#">Categorías</a>
                    <ul class="dropdown-content">
                        <li><a href="#">Turismo</a></li>
                        <li><a href="#">Infantil</a></li>
                        <li><a href="#">Cultural</a></li>
                        <li><a href="#">Fiestas</a></li>
                        <li><a href="#">Gratuitos</a></li>
                        <li><a href="#">Gastronómicos</a></li>
                        <li><a href="#">Adulto Mayor</a></li>
                        <li><a href="#">Aventura</a></li>
                    </ul>
                </li>
            </ul>
            <ul class="nav-right">
                <li>
                    <a href="http://localhost:8080/static/index.html" class="wsp-button">
                        <i class="fab fa-whatsapp"></i> WhatsApp
                    </a>
                </li>
                <li>
                    <a href="/api/carts">Carrito (<span id="cart-count">0</span>)</a>
                </li>
                <li>
                    <a href="/login" class="login-button">
                        <i class="fas fa-sign-in-alt"></i> Log In
                    </a>
                </li>
            </ul>
        </nav>
    </header>

    <main>
        {{{body}}}
      
        <div id="events-container" class="row"></div>
        <div id="pagination">
            <button id="prev-page" class="btn btn-secondary" onclick="fetchEvents(currentPage - 1)">Anterior</button>
            <span id="page-info"></span>
            <button id="next-page" class="btn btn-secondary" onclick="fetchEvents(currentPage + 1)">Siguiente</button>
        </div>
    </main>
    <footer>
        <p>&copy; 2024 OMATSURI</p>
    </footer>

    <script>
        let currentPage = 1; 
        const limit = 10; 

        function fetchEvents(page) {
            fetch(`/api/events?page=${page}&limit=${limit}`)
                .then(response => response.json())
                .then(data => {
                    const eventsContainer = document.getElementById('events-container');
                    eventsContainer.innerHTML = ''; 
                    data.payload.forEach(event => {
                        const card = document.createElement('div');
                        card.className = 'col-md-4 mb-4';
                        card.innerHTML = `
                            <div class="card">
                                <div class="card-body">
                                    <h5 class="card-title">${event.title}</h5>
                                    <p class="card-text">Categoría: ${event.category}</p>
                                    <p class="card-text">Precio: $${event.price}</p>
                                    <input type="number" min="1" value="1" class="quantity" placeholder="Cantidad">
                                    <button class="btn btn-primary add-to-cart" data-title="${event.title}" data-price="${event.price}">Agregar al Carrito</button>
                                </div>
                            </div>
                        `;
                        eventsContainer.appendChild(card);
                    });

                   
                    document.getElementById('page-info').innerText = `Página ${data.page} de ${data.totalPages}`;
                    currentPage = data.page;
                })
                .catch(error => console.error('Error al obtener eventos:', error));
        }

        document.addEventListener('DOMContentLoaded', () => {
            fetchEvents(currentPage); 
        });
    </script>
</body>
</html>
