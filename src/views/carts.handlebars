<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <title>Carrito</title>
    <link rel="stylesheet" href="/static/index.css">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body>
    <div class="container mt-4">
        <h1>Carrito de Compras</h1>
        <div id="cart-items" class="row mt-4">
        </div>
        <div class="text-center mt-4">
            <button class="btn btn-primary" id="checkout-btn">Proceder al Pago</button>
        </div>
    </div>

    <script src="/socket.io/socket.io.js"></script>
    <script>
        const socket = io(); // Conectar a Socket.IO
        let socketId;

        socket.on('connect', () => {
            socketId = socket.id; // Asignar el socket ID cuando se conecta

            // Obtener el carrito una vez que el socket esté conectado
            fetch(`/api/cart?socketId=${socketId}`)
                .then(response => {
                    if (!response.ok) {
                        throw new Error('Error al obtener el carrito');
                    }
                    return response.json();
                })
                .then(cart => {
                    const cartItemsContainer = document.getElementById('cart-items');
                    cart.products.forEach(item => {
                        const itemDiv = document.createElement('div');
                        itemDiv.className = 'col-md-4 mb-4';
                        itemDiv.innerHTML = `
                            <div class="card">
                                <div class="card-body">
                                    <h5 class="card-title">${item.title}</h5>
                                    <p class="card-text">Precio: $${item.price}</p>
                                    <p class="card-text">Cantidad: ${item.quantity}</p>
                                </div>
                            </div>
                        `;
                        cartItemsContainer.appendChild(itemDiv);
                    });
                })
                .catch(error => console.error('Error al obtener el carrito:', error));
        });

        // Escuchar eventos de actualización del carrito
        socket.on('cartUpdated', (updatedCart) => {
            const cartItemsContainer = document.getElementById('cart-items');
            cartItemsContainer.innerHTML = ''; // Limpiar el contenedor de artículos

            updatedCart.products.forEach(item => {
                const itemDiv = document.createElement('div');
                itemDiv.className = 'col-md-4 mb-4';
                itemDiv.innerHTML = `
                    <div class="card">
                        <div class="card-body">
                            <h5 class="card-title">${item.title}</h5>
                            <p class="card-text">Precio: $${item.price}</p>
                            <p class="card-text">Cantidad: ${item.quantity}</p>
                        </div>
                    </div>
                `;
                cartItemsContainer.appendChild(itemDiv);
            });
        });
    </script>
</body>
</html>

