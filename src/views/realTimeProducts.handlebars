<h2>Productos en Tiempo Real</h2>
<ul id="product-list">
    {{#each products}}
    <li>{{this.name}} - {{this.price}}</li>
    {{/each}}
</ul>

<form id="product-form">
    <input type="text" id="product-name" placeholder="Nombre del producto" required>
    <input type="number" id="product-price" placeholder="Precio" required>
    <button type="submit">Agregar Producto</button>
</form>

<h3>Mensajes</h3>
<div id="messages-container"></div>

<script src="/static/socket.io.js"></script>
<script>
    const socket = io();
    const productList = document.getElementById('product-list');
    const productForm = document.getElementById('product-form');
    const productNameInput = document.getElementById('product-name');
    const productPriceInput = document.getElementById('product-price');
    const messagesContainer = document.getElementById('messages-container');

    productForm.addEventListener('submit', (e) => {
        e.preventDefault();
        const name = productNameInput.value;
        const price = productPriceInput.value;
        socket.emit('newMessage', { socketid: socket.id, message: `Nuevo producto: ${name} - ${price}` });
        productNameInput.value = '';
        productPriceInput.value = '';
    });

    socket.on('messageHistory', (messages) => {
        messagesContainer.innerHTML = '';
        messages.forEach(msg => {
            const messageElement = document.createElement('p');
            messageElement.textContent = `${msg.socketid}: ${msg.message}`;
            messagesContainer.appendChild(messageElement);
        });
    });
</script>
